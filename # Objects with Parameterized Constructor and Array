//problem 41

class clsA
{
    int x;
public:
    clsA(int value)
    {
        x = value;
    }

    void print()
    {
        cout << "\nThe Value Of X = " << x << endl;
    }
};

int main()
{
    clsA ArrObject[] = { clsA(30),clsA(40),clsA(50) };

    for (int i = 0;i < 3;i++)
    {
        ArrObject[i].print();
    }

    system("pause");
    return 0;
}
