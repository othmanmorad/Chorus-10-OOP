 //lesson 38
class clsA 
{
public:
    int x;
    void Print()
    {
        cout << "The value of x = " << x << endl;
    }

};

void Func1(clsA A2)
{
    A2.x = 40;
}

void Func2(clsA &A2)
{
    A2.x = 100;
}

int main()
{
    clsA A2;
    A2.x = 70;

    cout << "\nBefor calling function1 " << A2.x << endl;


    Func1(A2);
    cout << "\nAfter calling function1 ByVal " << A2.x << endl;

    Func2(A2);
    cout << "\nAfter calling function2 ByRef " << A2.x << endl;

}
